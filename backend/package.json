{
    "name": "quang-ninh-travel-backend",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions backend for Quang Ninh Travel app",
    "main": "lib/index.js",
    "scripts": {
        "build": "./node_modules/.bin/tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions,firestore,auth",
        "deploy": "firebase deploy --only functions,firestore",
        "seed": "ts-node src/seed/run-seed.ts",
        "lint": "eslint src/**/*.ts"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^6.0.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^25.2.3",
        "@types/uuid": "^9.0.8",
        "firebase-functions-test": "^3.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "private": true
}

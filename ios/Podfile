# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      # Force C++17 for all pods to fix gRPC/Firestore build issues
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'

      # Debug dump for BoringSSL-GRPC
      if target.name == 'BoringSSL-GRPC'
         puts "--- Build Settings for #{target.name} (#{config.name}) ---"
         config.build_settings.each do |k, v|
           puts "#{k}: #{v}" if v.to_s.include?('-G')
         end
         puts "--------------------------------------------------------"
      end

      ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS', 'GCC_PREPROCESSOR_DEFINITIONS', 'WARNING_CFLAGS'].each do |key|
        flags = config.build_settings[key]
        if flags
           # Remove -G and -GCC_WARN_INHIBIT_ALL_WARNINGS (misinterpreted as -G)
           if flags.is_a?(String)
             config.build_settings[key] = flags.gsub(/-GCC_WARN_INHIBIT_ALL_WARNINGS/, '').gsub(/(^|\s)-G($|\s)/, '\1\2').strip
           elsif flags.is_a?(Array)
             config.build_settings[key] = flags.reject { |f| f == '-G' || f == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
           end
        end
      end
    end
    
    # Check file-level settings
    if target.respond_to?(:source_build_phase) && target.source_build_phase
      target.source_build_phase.files.each do |file|
        if file.respond_to?(:settings) && file.settings
          file.settings.each do |k, v|
             if k == 'COMPILER_FLAGS' && v.is_a?(String)
                file.settings[k] = v.gsub(/-GCC_WARN_INHIBIT_ALL_WARNINGS/, '').gsub(/(^|\s)-G($|\s)/, '\1\2').strip
             end
          end
        end
      end
    end
  end
end
